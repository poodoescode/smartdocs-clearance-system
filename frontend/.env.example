# ============================================
# Frontend Environment Variables Template
# ============================================
# 
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit the .env file to Git
# 4. All Vite env vars must start with VITE_ prefix
#
# ============================================

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://supabase.com/dashboard → Your Project → Settings → API

# Supabase Project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon/Public Key (safe for client-side)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL
# Development: http://localhost:5000/api
# Production: https://your-backend-domain.com/api
VITE_API_URL=http://localhost:5000/api

# ============================================
# RECAPTCHA CONFIGURATION
# ============================================
# Get this from: https://www.google.com/recaptcha/admin
# This is the SITE key (safe for client-side)
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# ============================================
# NOTES
# ============================================
# - All environment variables must start with VITE_ to be exposed to the app
# - Keep this file updated when adding new environment variables
# - Document what each variable is used for
# - Never commit actual credentials to version control

# ============================================
# UI CONFIGURATION
# ============================================
# Loader display duration (milliseconds)
VITE_LOADER_TIMEOUT=1000

# Session timeout for API calls (milliseconds)
VITE_SESSION_TIMEOUT=3000

# Enable/disable animations
VITE_ENABLE_ANIMATIONS=true

# Enable/disable pixel trail effect
VITE_ENABLE_PIXEL_TRAIL=true

# ============================================
# FEATURE FLAGS
# ============================================
# Enable error logging to external service
VITE_ENABLE_ERROR_LOGGING=true

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false
